/* @theme uniri */

@import-theme 'default'
@import 'const'

@import url('https://fonts.googleapis.com/css2?family=Fira+Code&family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,700;1,200;1,300;1,400;1,700&display=swap');

section
    background-color color-lighter
    color color-darker
    align-items stretch
    line-height 1.3rem

    --section-pad-left-extra 0%
    --section-pad-right-extra 0%
    padding "calc(%s + %s)"%(font-size-h1 spacing-small*2) "calc(var(--section-pad-right-extra) + %s)"%(spacing-large) "calc(%s + %s)"%(font-size-small spacing-small*2) "calc(var(--section-pad-left-extra) + %s)"%(spacing-large)

    &.space-start
        justify-content flex-start
    &.space-end
        justify-content flex-end
    &.space-even
        justify-content space-evenly
    &.align-center
        align-items center

    h1,h2,h3,h4,h5,h6
        font-family font-family-serif
    h1
        font-size text-size-h1
        color color-secondary
    h2,h3,h4,h5,h6
        color color-secondary-darker
    h2
        font-size text-size-h2
    h3
        font-size text-size-h3
    h4
        font-size text-size-h4
    h5
        font-size text-size-h5
    h6
        font-size text-size-h6
    h1:first-of-type
        position absolute
        top 1rem
        left 1rem
    p,a
        font-family font-family-sans-serif
        font-size text-size-normal
        color color-darker
    a
        color color-primary-darker

    li ul, li + li
        margin-top spacing-tiny

    hr
        margin 0.1em auto 0.25em auto
        padding-top 2px
        width 90%
        background-color color-primary

    code,:is(pre, marp-pre)
        background-color white
        color color-darker
        font-family font-family-monospace
        border solid 2px color-primary-darker
        border-radius spacing-small
        padding spacing-small
        max-height 100%
    code,code *
        font-family font-family-monospace
    code
        border-radius spacing-tiny
        padding spacing-tiny


    img
        background transparent
    header,footer
        display block
        font-family font-family-monospace
        font-size font-size-tiny
        color color-light
    header
        width "calc(100% - %s)" % (spacing-medium * 2)
        text-align right
        top spacing-small
    footer
        bottom spacing-small

    &::after
        position absolute
        right spacing-medium
        bottom spacing-small
        color color-dark
        font-family font-family-monospace
        font-size font-size-small

section.author-page
    padding-left calc(2rem + 15% + 2rem)
    justify-content flex-start

    img.profile
        position absolute
        top 3em
        left 0
        width 15%
        margin 2rem
        padding 0.2rem
        outline solid 2px color-primary
        border-radius 100vw

section.lead
    background-color color-primary-darker
    color color-lighter
    padding-left 50%

    h1
        position initial
        top initial
        left initial
        font-size font-size-huge
        font-weight bold
        font-family font-family-serif
        color color-lighter
    h2,h3
        font-size font-size-normal
        font-weight normal
        font-family font-family-sans-serif
        color color-lighter

        &::before
            display inline-block
            padding-right 0.5ch
            font-size 1.1rem
            font-weight bold
            font-family font-family-serif
            color color-secondary-darker
            content "autor:"
    h3::before
        content "mentor:"

    header,footer,&::after
        display none

    ul.owners
        list-style-type none
        padding-left 0

        li
            text-decoration none
            font-size 1.2rem
            font-family 'Source Sans Pro', sans-serif

        li.removed
            text-decoration line-through

        li::before
            display inline-block
            padding-right 0.5ch
            font-size 1.1rem
            font-weight bold
            font-family 'Lora', serif
            color color-secondary-darker

        li[data-author]::before
            content "autor:"
            
        li[data-mentor]::before
            content "mentor:"

    &::before
        display block
        content ""
        position absolute
        left 0
        top 50%
        width 50%
        aspect-ratio 1 / 1
        background url(./assets/logo-light.png)
        background url(./assets/logo-light.svg)
        background-repeat no-repeat
        background-size contain
        background-position center center
        transform translateY(-50%)

section.part
    background-color color-secondary-darker
    align-items center
    padding-top "calc(%s + %s)"%(font-size-tiny spacing-small*2)

    h1
        position initial
        left initial
        top initial
        color color-lighter

    header,footer
        color color-lighter
        text-align center
    &::after
        display none